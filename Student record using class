#include<iostream>
#include<string.h>
using namespace std;
class abc
{
   int a;
   char lop[30];
   public:
       void get(int n,char na[])

       {
           a=n;
           strcpy(lop,na);

       }
       void disp()
       {

           cout<<"Here is the name  "<<lop ;
           cout<<endl<<"Here is the roll no"<<a;
       }
};
int main()
{
  abc ob;
  int a;
  char n[30];
  cout<<"Enter the roll";
  cin>>a;
  cout<<endl<<"Enter the name";
  cin>>n;
  ob.get(a,n);
  ob.disp();
  return 0;
}
