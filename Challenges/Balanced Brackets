#include<iostream>
#include<string>
using namespace std;
int main()

{

 string s;
 int n;
 cin>>n;
 int a,b,c=0;
 int stk[n]={};
 for(int i=0;i<n;i++)
 {
     cin>>s;
      if(s.length()%2!=0)
        {
            stk[i]=0;

        }
        else
        {
            c=0;


            for(int j=0;j<s.length()/2;j++)
            {
                a=s[j];
                b=s[s.length()-(j+1)];
                if(a==(b-2))
                {
                  continue;

                }
                else if(a==(b-1))
                {
                    continue;
                }
                else
                {
                    c++;
                }
            }
            if(c!=0)
            {
                stk[i]=0;
            }
            else
            {
                stk[i]=1;
            }
        }
 }
 for(int i=0;i<n;i++)
 {
     if(stk[i]==1)
     {
         cout<<"Yes"<<endl;
     }
     else
     {
         cout<<"NO"<<endl;
     }
 }

 }
