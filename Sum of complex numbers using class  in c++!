#include<iostream>
using namespace std;
	class complex
	{
	  int a,b;
	  public:
	void init(int x,int y)
	   {
	    a=x;
	    b=y;
	   }
	void disp()
	   {
	    cout<<a<<" +i "<<b<<endl;
	   }
	void sum(complex m,complex n)
	   {
	    a=m.a+n.a;
	    b=m.b+n.b;
	   }
	};
int main()
{
 complex ob1,ob2,ob3;
 float a,b;
 cout<<"Enter the number";
 cin>>a>>b;
 ob1.init(a,b);
 cout<<"Enter the number";
 cin>>a>>b;
 ob2.init(a,b);
 ob3.sum(ob1,ob2);
 cout<<"Complex numbers are";
 ob1.disp();
 ob2.disp();
 cout<<"Sum is ";
 ob3.disp();
 ob3.disp();
return 0;
}
